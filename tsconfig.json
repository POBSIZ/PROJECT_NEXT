{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "Actions/*": [
        "src/redux/actions/*"
      ],
      "Types/*": [
        "src/redux/types/*"
      ],
      "Bases/*": [
        "src/components/base/*"
      ],
      "Templates/*": [
        "src/components/templates/*"
      ],
      "UIpages/*": [
        "src/components/pages/*"
      ],
      "Atoms/*": [
        "src/components/UI/atoms/*"
      ],
      "Molecules/*": [
        "src/components/UI/molecules/*"
      ],
      "Organisms/*": [
        "src/components/UI/organisms/*"
      ],
      "Hoc/*": [
        "src/components/HOC/*"
      ],
      "Utils/*": [
        "src/utils/*"
      ],
      "StyleVars": [
        "styles/global_styles.tsx"
      ],
      "StoriesLayout": [
        "src/components/UI/stories/storiesLayout/index.tsx"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "noEmit": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noResolve": false,
    "removeComments": false,
    "sourceMap": true,
    "keyofStringsOnly": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "next.config.js",
    "main.ts"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/@type",
    "src/types"
  ]
}
